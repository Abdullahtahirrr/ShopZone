<!doctype html>
<html lang="en">

<head>

	<!-- Basic Page Needs
================================================== -->
	<title>ShopZone</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- CSS
================================================== -->
	<link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="/css/colors/orange.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>

<body>

	<!-- Wrapper -->
	<div id="wrapper">


			<%- include('../partials/header') %>

		<div class="clearfix"></div>
		<!-- Header Container / End -->
		<!-- Intro Banner
================================================== -->
		<!-- add class "disable-gradient" to enable consistent background overlay -->
		<br>
		<br>
		<div class="intro-banner" data-background-image="/images/home-background.jpg">
			<div class="container">

				<!-- Intro Headline -->
				<div class="row">
					<div class="col-md-12">
						<div class="banner-headline">
							<h3>
								<strong>Discover <strong class="color">ShopZone</strong> - Your ultimate e-commerce destination!</strong>
								<br>
								<span>Shop everything you love, from fashion to electronics, all in one place.</span>
							</h3>
						</div>
					</div>
				</div>



				<!-- Stats -->
				<div class="row">
					<div class="col-md-12">
						<ul class="intro-stats margin-top-45 hide-under-992px">
							<li>
								<strong class="counter">
									<%= noofjobs[0].count%>
								</strong>
								<span>Products Posted</span>
							</li>
							<li>
								<strong class="counter">
									<%= nooftasks[0].count%>
								</strong>
								<span>Categories</span>
							</li>
							<li>
								<strong class="counter">
									<%= nooffls[0].count%>
								</strong>
								<span>Buyers</span>
							</li>
							<li>
								<strong class="counter">
									<%= noofcs[0].count%>
								</strong>
								<span>Sellers</span>
							</li>
						</ul>
					</div>
				</div>
	
			</div>
		</div>
	

		<!-- Content
================================================== -->
<div class="section margin-top-65">
	<div class="container">
		<div class="row">
			<div class="col-xl-12">

				<div class="section-headline centered margin-bottom-15">
					<h3>Popular Product Categories</h3>
				</div>		
		<!-- Category Boxes -->
				<div class="categories-container">

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-shopping-bag"></i>
						</div>
						<div class="category-box-counter">612</div>
						<div class="category-box-content">
							<h3>Fashion & Apparel</h3>
							<p>Stay in vogue with our trendy clothing, shoes, and accessories for all ages and styles.</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-laptop"></i>
						</div>
						<div class="category-box-counter">113</div>
						<div class="category-box-content">
							<h3>Electronics & Gadgets</h3>
							<p>Discover the latest gadgets, smartphones, laptops, and tech accessories to elevate your digital experience.</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-home"></i>
						</div>
						<div class="category-box-counter">186</div>
						<div class="category-box-content">
							<h3>Home & Living</h3>
							<p>Create your dream living space with a wide selection of furniture, decor, kitchenware, and more</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-heart"></i>
						</div>
						<div class="category-box-counter">298</div>
						<div class="category-box-content">
							<h3>Beauty & Personal Care</h3>
							<p>Pamper yourself with top-notch skincare, makeup, haircare, and grooming products.</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-dumbbell"></i>
						</div>
						<div class="category-box-counter">549</div>
						<div class="category-box-content">
							<h3>Health & Fitness</h3>
							<p>Find everything you need to stay fit and healthy, from exercise equipment to dietary supplements.</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-gamepad"></i>
						</div>
						<div class="category-box-counter">873</div>
						<div class="category-box-content">
							<h3>Toys & Games</h3>
							<p>Keep the fun alive with a vast assortment of toys, games, and entertainment for kids and adults alike</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-book"></i>
						</div>
						<div class="category-box-counter">125</div>
						<div class="category-box-content">
							<h3>Books & Stationery</h3>
							<p>Immerse yourself in captivating stories or organize your work with our collection of books and stationery.</p>
						</div>
					</a>

					<!-- Category Box -->
					<a href="#" class="category-box">
						<div class="category-box-icon">
							<i class="fas fa-bicycle"></i>
						</div>
						<div class="category-box-counter">445</div>
						<div class="category-box-content">
							<h3>Sports & Outdoors</h3>
							<p>Gear up for adventure with high-quality sports equipment, outdoor gear, and camping essentials</p>
						</div>
					</a>

				</div>

	</div>
</div>
</div>
</div>
		<!-- Category Boxes / End -->




		<!-- Highest Rated Freelancers -->
		<div class="section gray padding-top-65 padding-bottom-70 full-width-carousel-fix">
			<div class="container">
				<div class="row">

					<div class="col-xl-12">
						<!-- Section Headline -->
						<div class="section-headline margin-top-0 margin-bottom-25">
							<h3>Highest Rated Sellers</h3>
							<a href="http://localhost:3000/sellers-grid-layout-full-page"
								class="headline-link">Browse All Sellers</a>
						</div>
					</div>

					<div class="col-xl-12">
						<div class="default-slick-carousel freelancers-container freelancers-grid-layout">

							<!--Freelancer -->
							<% for (let i=0; i < freelancer.length; i++){ %>
								<div class="freelancer">

									<!-- Overview -->
									<div class="freelancer-overview">
										<div class="freelancer-overview-inner">

											<!-- Bookmark Icon -->
											<span class="bookmark-icon"></span>

											<!-- Avatar -->

											<div class="freelancer-avatar">
												<div class="verified-badge"></div>
												<a
													href="http://localhost:3000/single-company-profile/<%=freelancer[i].seller_id%>"><img
														src="<%= freelancer[i].image %>" alt=""></a>
											</div>

											<!-- Name -->
											<div class="freelancer-name">
												<h4><a
														href="http://localhost:3000/single-company-profile/<%=freelancer[i].seller_id%>">
														<%= freelancer[i].companyname %>
															 <img class="flag"
																	src="/images/flags/gb.svg" alt=""
																	title="United Kingdom" data-tippy-placement="top">
													</a></h4>
												<span>
													<%= freelancer[i].companytype %>
												</span>
											</div>

											<!-- Rating -->
											<div class="freelancer-rating">
												<div class="star-rating" data-rating="5.0"></div>
											</div>
										</div>
									</div>

									<!-- Details -->
									<div class="freelancer-details">
										<div class="freelancer-details-list">
											<ul>
												<li>Location <strong><i class="icon-material-outline-location-on"></i>
														<%= freelancer[i].headquarter %>
													</strong></li>
	
												<li>Ratings <strong>85%</strong></li>
											</ul>
										</div>
										<a href="http://localhost:3000/single-company-profile/<%=freelancer[i].seller_id%>"
											class="button button-sliding-icon ripple-effect">View Profile <i
												class="icon-material-outline-arrow-right-alt"></i></a>
									</div>
								</div>
								<%}%>
									<!-- Freelancer / End -->

						</div>
					</div>

				</div>
			</div>
		</div>
		<!-- Highest Rated Freelancers / End-->
		<%- include('../partials/footer') %>


	</div>
	<!-- Wrapper / End -->


	<!-- Scripts
================================================== -->
	<script src="/js/jquery-3.3.1.min.js"></script>
	<script src="/js/jquery-migrate-3.0.0.min.js"></script>
	<script src="/js/mmenu.min.js"></script>
	<script src="/js/tippy.all.min.js"></script>
	<script src="/js/simplebar.min.js"></script>
	<script src="/js/bootstrap-slider.min.js"></script>
	<script src="/js/bootstrap-select.min.js"></script>
	<script src="/js/snackbar.js"></script>
	<script src="/js/clipboard.min.js"></script>
	<script src="/js/counterup.min.js"></script>
	<script src="/js/magnific-popup.min.js"></script>
	<script src="/js/slick.min.js"></script>
	<script src="/js/custom.js"></script>

	<!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
	<script>
		// Snackbar for user status switcher
		$('#snackbar-user-status label').click(function () {
			Snackbar.show({
				text: 'Your status has been changed!',
				pos: 'bottom-center',
				showAction: false,
				actionText: "Dismiss",
				duration: 3000,
				textColor: '#fff',
				backgroundColor: '#383838'
			});
		}); 
	</script>


	<!-- Google Autocomplete -->
	<script>
		function initAutocomplete() {
			var options = {
				types: ['(cities)'],
				// componentRestrictions: {country: "us"}
			};

			var input = document.getElementById('autocomplete-input');
			var autocomplete = new google.maps.places.Autocomplete(input, options);
		}

		// Autocomplete adjustment for homepage
		if ($('.intro-banner-search-form')[0]) {
			setTimeout(function () {
				$(".pac-container").prependTo(".intro-search-field.with-autocomplete");
			}, 300);
		}

	</script>

	<!-- Google API -->
	<script
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAgeuuDfRlweIs7D6uo4wdIHVvJ0LonQ6g&libraries=places&callback=initAutocomplete"></script>

</body>

</html>