<!doctype html>
<html lang="en">

<head>

	<!-- Basic Page Needs
================================================== -->
	<title>ShopZone</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- CSS
================================================== -->
	<link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="/css/colors/orange.css">

</head>

<body>

	<!-- Wrapper -->
	<div id="wrapper">

		<%- include('../partials/header') %>

		<div class="clearfix"></div>
		<!-- Header Container / End -->
		<!-- Page Content
================================================== -->
		<div class="full-page-container">

			<div class="full-page-sidebar">
				<form method="POST" id="freelancerfilterform">
					<div class="full-page-sidebar-inner" data-simplebar>
						<div class="sidebar-container">

							<!-- Location -->
							<div class="sidebar-widget">
								<h3>Country</h3>
								<div class="input-with-icon">
									<div id="autocomplete-container">
										<input id="autocomplete-input" name="location" type="text"
											placeholder="Country">
									</div>
									<i class="icon-material-outline-location-on"></i>
								</div>
							</div>

							<!-- Category -->
							<div class="sidebar-widget">
								<h3>Company Type</h3>
								<div class="input-with-icon">
									<div id="autocomplete-container">
										<input id="autocomplete-input" name="category" type="text"
											placeholder="Category">
									</div>
									<i class="icon-material-outline"></i>
								</div>
							</div>

							<!-- Tags -->
							<div class="sidebar-widget">
								<h3>Keywords</h3>
								<div class="input-with-icon">
									<div id="autocomplete-container">
										<input id="autocomplete-input" name="keywords" type="text"
											placeholder="Keywords">
									</div>
									<i class="icon-material-outline"></i>
								</div>
							</div>


							<!-- Hourly Rate
							<div class="sidebar-widget">
								<h3>Hourly Rate</h3>
								<div class="margin-top-55"></div>

								Range Slider
								<input name="hourlyrate" class="range-slider" type="text" value=""
									data-slider-currency="$" data-slider-min="10" data-slider-max="250"
									data-slider-step="5" data-slider-value="[10,250]" />
							</div> -->

							<!-- Tags -->
							<!-- <div class="sidebar-widget">
								<h3>Tags</h3>
								<div class="input-with-icon">
									<div id="autocomplete-container">
										<input id="autocomplete-input" name="skills" type="text" placeholder="Skills">
									</div>
									<i class="icon-material-outline"></i>
								</div>
							</div> -->
							<div class="clearfix"></div>

							<div class="margin-bottom-40"></div>

						</div>
						<!-- Sidebar Container / End -->
				</form>
				<!-- Search Button -->
				<div class="sidebar-search-button-container">
					<button class="button ripple-effect margin-top-30" type="submit" form="freelancerfilterform">Search
						<i class="icon-material-outline-arrow-right-alt"></i></button>
				</div>
				<!-- Search Button / End-->

			</div>
		</div>
		<!-- Full Page Sidebar / End -->

		<!-- Full Page Content -->
		<div class="full-page-content-container" data-simplebar>
			<div class="full-page-content-inner">

				<h3 class="page-title">Search Results</h3>



				<!-- Freelancers List Container -->
				<div class="freelancers-container freelancers-grid-layout margin-top-35">
					<% if (typeof freelancers !="undefined" && freelancers.length> 0) { %>
						<% for (let i=0; i < freelancers.length; i++) { %>
							<!--Freelancer -->
							<div class="freelancer">

								<!-- Overview -->
								<div class="freelancer-overview">
									<div class="freelancer-overview-inner">

										<!-- Bookmark Icon -->
										<span class="bookmark-icon"></span>

										<!-- Avatar -->
										<div class="freelancer-avatar">
											<div class="verified-badge"></div>
											<% if (details[0].buyer_id) { %>
												<a
												href="http://localhost:3000/singlecompanypagefreelancer/<%= freelancers[i].seller_id %>"><img
													src="<%= freelancers[i].image %>"
													alt="/images/user-avatar-big-01.jpg"></a>
													<%} else {%>

											<a
												href="http://localhost:3000/single-company-profile/<%= freelancers[i].seller_id %>"><img
													src="<%= freelancers[i].image %>"
													alt="/images/user-avatar-big-01.jpg"></a>
													<% } %>
										</div>

										<!-- Name -->
										<div class="freelancer-name">
											<% if (details[0].buyer_id) { %>

											<h4><a
													href="http://localhost:3000/singlecompanypagefreelancer/<%= freelancers[i].seller_id %>">
													<%= freelancers[i].companyname %>
										
															<img class="flag" src="/images/flags/gb.svg" alt="" title=""
																data-tippy-placement="top">
												</a>
											</h4>
											<%} else {%>
												<h4><a
													href="http://localhost:3000/single-company-profile/<%= freelancers[i].seller_id %>">
													<%= freelancers[i].companyname %>
										
															<img class="flag" src="/images/flags/gb.svg" alt="" title=""
																data-tippy-placement="top">
												</a>
											</h4>

												<% } %>


											<span>
												<%= freelancers[i].companytype %>
											</span>
										</div>

										<!-- Rating -->
										<div class="freelancer-rating">
											<div class="star-rating" data-rating="4.9"></div>
										</div>
									</div>
								</div>

								<!-- Details -->
								<div class="freelancer-details">
									<div class="freelancer-details-list">
										<ul>
											<li>Location <strong><i class="icon-material-outline-location-on"></i>
													<%= freelancers[i].headquarter %>
												</strong></li>
										
											<li>Ratings <strong>95%</strong></li>
										</ul>
									</div>
									<% if (details[0].buyer_id) { %>

									<a href="http://localhost:3000/singlecompanypagefreelancer/<%= freelancers[i].seller_id %>"
										class="button button-sliding-icon ripple-effect">View Profile <i
											class="icon-material-outline-arrow-right-alt"></i></a>
											<%} else {%>
												<a href="http://localhost:3000/single-company-profile/<%= freelancers[i].seller_id %>"
													class="button button-sliding-icon ripple-effect">View Profile <i
														class="icon-material-outline-arrow-right-alt"></i></a>
												<% }%>
								</div>
							</div>
							<!-- Freelancer / End -->
							<% } %>
								<% } else { %>
									No sellers found
									<% } %>


				</div>
				<!-- Freelancers Container / End -->

				<!-- Pagination -->
				<div class="clearfix"></div>
				<div class="pagination-container margin-top-20 margin-bottom-20">
					<nav class="pagination">
						<ul>
							<li class="pagination-arrow"><a href="#" class="ripple-effect"><i
										class="icon-material-outline-keyboard-arrow-left"></i></a></li>
							<li><a href="#" class="ripple-effect">1</a></li>
							<li><a href="http://localhost:3000/sellers-grid-layout-full-page"
									class="ripple-effect ">2</a></li>
							<li><a href="http://localhost:3000/nomore" class="ripple-effect">3</a></li>
							<li><a href="http://localhost:3000/nomore" class="ripple-effect">4</a></li>
							<li class="pagination-arrow"><a href="#" class="ripple-effect"><i
										class="icon-material-outline-keyboard-arrow-right"></i></a></li>
						</ul>
					</nav>
				</div>
				<div class="clearfix"></div>
				<!-- Pagination / End -->


			</div>
		</div>
		<!-- Full Page Content / End -->

	</div>
	<%- include('../partials/footer') %>


	</div>
	<!-- Wrapper / End -->

	<!-- Scripts
================================================== -->
	<script src="/js/jquery-3.3.1.min.js"></script>
	<script src="/js/jquery-migrate-3.0.0.min.js"></script>
	<script src="/js/mmenu.min.js"></script>
	<script src="/js/tippy.all.min.js"></script>
	<script src="/js/simplebar.min.js"></script>
	<script src="/js/bootstrap-slider.min.js"></script>
	<script src="/js/bootstrap-select.min.js"></script>
	<script src="/js/snackbar.js"></script>
	<script src="/js/clipboard.min.js"></script>
	<script src="/js/counterup.min.js"></script>
	<script src="/js/magnific-popup.min.js"></script>
	<script src="/js/slick.min.js"></script>
	<script src="/js/custom.js"></script>

	<!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
	<script>
		// Snackbar for user status switcher
		$('.status-switch label').click(function () {
			Snackbar.show({
				text: 'Your status has been changed!',
				pos: 'bottom-center',
				showAction: false,
				actionText: "Dismiss",
				duration: 3000,
				textColor: '#fff',
				backgroundColor: '#383838'
			});
		});
	</script>

	<!-- Google Autocomplete -->
	<script>
		function initAutocomplete() {
			var options = {
				types: ['(cities)'],
				// componentRestrictions: {country: "us"}
			};

			var input = document.getElementById('autocomplete-input');
			var autocomplete = new google.maps.places.Autocomplete(input, options);
		}
	</script>

	<!-- Google API & Maps -->
	<!-- Geting an API Key: https://developers.google.com/maps/documentation/javascript/get-api-key -->
	<script src="https://maps.googleapis.com/maps/api/js?key=&libraries=places"></script>

</body>

</html>